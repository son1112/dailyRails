<h1>Listing posts</h1>

<%= video_tag('test.webm') %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Log</th>
      <th>Category</th>
      <th>Tags</th>
      <th>Commetns</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.log %></td>
        <td><%= post.category %></td>
        <td><%= post.tags %></td>
        <td><%= post.commetns %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
